rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    match /clients/{uid} {
      allow read, write: if isOwner(uid);
    }

    match /propertySales/{docId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isSignedIn();
    }

    match /repairRequests/{docId} {
      allow read, write: if isSignedIn() && request.resource.data.clientUid == request.auth.uid;
    }

    match /emailQueue/{docId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    match /chatbot_leads/{docId} {
      allow read, write: if isSignedIn();
    }

    match /chatbot_conversations/{phone}/{sub=**} {
      allow read: if isSignedIn();
    }

    match /chatbot_visits/{docId} {
      allow read, write: if isSignedIn();
    }

    match /site_visits/{docId} {
      allow create, read: if true;
      allow update, delete: if false;
    }

    match /brokers/{docId} {
      allow create, read: if true;
      allow update, delete: if true;
    }

    match /passwordResetTokens/{docId} {
      allow create, read: if true;
      allow update: if true;
    }
  }
}



