rules_version = '2';
// IMPORTANTE: Migre corretores para Firebase Auth para maior segurança.
// propertySales, repairRequests e brokers usam acesso client-side por limitação atual.
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    match /clients/{uid} {
      allow read, write: if isOwner(uid);
    }

    match /propertySales/{docId} {
      allow create: if request.resource.data.keys().hasAny(['clientEmail', 'clientName', 'propertyId']);
      allow read, update, delete: if true;
    }

    match /repairRequests/{docId} {
      allow create: if request.resource.data.keys().hasAny(['description', 'clientId', 'clientEmail', 'propertyId']);
      allow read, update, delete: if true;
    }

    match /emailAuditLog/{docId} {
      allow create: if true;
      allow read: if isSignedIn();
    }

    match /emailQueue/{docId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    match /chatbot_leads/{docId} {
      allow read, write: if isSignedIn();
    }

    match /chatbot_conversations/{phone}/{sub=**} {
      allow read: if isSignedIn();
    }

    match /chatbot_visits/{docId} {
      allow read, write: if isSignedIn();
    }

    match /site_visits/{docId} {
      allow create, read: if true;
      allow update, delete: if false;
    }

    match /brokers/{docId} {
      allow create: if request.resource.data.keys().hasAny(['email', 'name']);
      allow read, update, delete: if true;
    }

    match /passwordResetTokens/{docId} {
      allow create: if request.resource.data.keys().hasAny(['token', 'email']);
      allow read, update: if true;
    }
  }
}



